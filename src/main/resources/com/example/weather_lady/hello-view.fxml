<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.weather_lady.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="weLocation"/>

    <Label fx:id="temperature"/>
    <Label fx:id="pressure"/>
    <Label fx:id="humidity"/>
    <Label fx:id="weWind"/>
    <Label text="Search for a location"/>
    <TextField fx:id="search"/>
    <Button text="Search" onAction="#onSearchButtonClick"/>
</VBox>
